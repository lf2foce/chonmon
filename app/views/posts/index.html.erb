            <div class="tab-content">
              <div class="tab-pane container active" id="home">
                <div class="row">
                  <div class="bg-white p-3 rounded-lg">
                      <%= render @posts %>
                  </div>
                </div>
                <div class="apple_pagination">
                  <%= will_paginate @posts %>
                </div>
