
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

<div class="container"> 
      <div class="row">
        <%= render partial: 'sidebar' %>
        <%= render partial: 'main' %>

        <div class="modal fade" id="new_post_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New food</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= form_with(model: @post, local: true) do |form| %>

                  <div class="form-group">
                    <%= form.label :title %>
                    <%= form.text_field :title, class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= form.label :content %>
                    <%= form.text_area :content, class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= form.label :image_url %>
                    <%= form.text_field :image_url, class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= form.label :category_id %>
                    <%= form.text_field :category_id, class: 'form-control' %>
                  </div>

                  <div class="form-group">
                      <%= form.submit "Create", class: "btn btn-warning" %>
                  </div>
                <% end %>
              </div>
              
            </div>
          </div>
        </div>

<script>
  $("#ein-filter .grab").click(function(){
    $("#ein-filter .grab").removeClass('ein-active');
    $(this).toggleClass('ein-active'); 
  }); 
</script>

<script>
document.addEventListener("turbolinks:load",() => {
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#home .media").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});

