            <div class="w-100 bg-white rounded-lg p-3 mb-3">

              <%= form_tag posts_path, class: "form-inline my-2 my-lg-0 pb-3", method: :get do %>
                <%= text_field_tag "filter", params[:filter], placeholder: "Enter user's name or surname", class: "form-control mr-sm-2" %>
                <%= submit_tag "Search!", class: "btn btn-primary my-2 my-sm-0" %>
              <% end %>

              <% if @count %>  
              <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Nice!</strong> We found <%= @count %> location.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
